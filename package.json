{
  "name": "grimoirejs-gltf",
  "version": "0.0.0-development",
  "description": "glTF model loader for grimoire.js",
  "main": "./ref/index.js",
  "scripts": {
    "start": "webpack --watch --progress",
    "prestart": "npm run prebuild",
    "test": "tsc --outDir ./lib && babel ./lib --presets es2015  --plugin transform-runtime --out-dir ./lib-es5 && babel ./test --presets es2015  --plugin transform-runtime --out-dir ./test-es5 && ava ./test-es5/**/*Test.js --verbose ",
    "bundle": "webpack --progress --watch",
    "prepublishOnly": "npm run build -- --env.prod&&npm test&&cauldron doc",
    "build": "webpack --progress",
    "prebuild": "cauldron generate-exposure --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref",
    "postbuild": "cauldron generate-reference --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "author": "",
  "license": "MIT",
  "typings": "./ref/index.d.ts",
  "files": [
    "src",
    "ref",
    "register"
  ],
  "devDependencies": {
    "ava": "^0.19.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "condition-circle": "^1.5.0",
    "grimoirejs-cauldron": "^2.3.3",
    "raw-loader": "^0.5.1",
    "semantic-release": "^6.3.2",
    "ts-loader": "^2.0.3",
    "typescript": "^2.2.2",
    "webpack": "^2.3.3",
    "webpack-dev-server": "^2.4.2",
    "webpack-shell-plugin": "^0.5.0",
    "yargs": "^8.0.1"
  },
  "dependencies": {
    "grimoirejs": "^0.15.4",
    "grimoirejs-fundamental": "^0.18.0",
    "grimoirejs-math": "^1.12.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GrimoireGL/grimoirejs-glTF.git"
  },
  "release": {
    "verifyConditions": "condition-circle"
  }
}
