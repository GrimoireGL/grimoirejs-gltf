{
  "name": "grimoirejs-gltf",
  "version": "1.8.0-beta1",
  "description": "glTF model loader for grimoire.js",
  "main": "./ref/index.js",
  "scripts": {
    "start": "webpack --watch --progress",
    "test": "tsc --outDir ./lib && babel ./lib --presets es2015  --plugin transform-runtime --out-dir ./lib-es5 && babel ./test --presets es2015  --plugin transform-runtime --out-dir ./test-es5 && ava ./test-es5/**/*Test.js --verbose ",
    "bundle": "webpack --progress --watch",
    "prepublish": "npm run build -- --prod&&npm test&&cauldron doc",
    "build": "webpack --progress",
    "generate-expose": "cauldron generate-exposure --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref",
    "generate-reference": "cauldron generate-reference --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref"
  },
  "author": "",
  "license": "MIT",
  "typings": "./ref/index.d.ts",
  "files": [
    "src",
    "ref",
    "register"
  ],
  "grimoire": {
    "isPlugin": true,
    "ts": {
      "lib": "./lib",
      "temp": "./lib-ts",
      "src": "./src",
      "es5": "./lib-es5"
    },
    "main": "index.ts",
    "test": {
      "defaultGlob": "**/*Test.js",
      "src": "./test",
      "temp": "./lib-test"
    },
    "out": {
      "es6": "./product/grimoire.es2016.js",
      "es5": "./product/grimoire.js"
    },
    "txt-exts": [
      ".txt",
      ".html",
      ".goml",
      ".sort"
    ],
    "doc": {
      "src": "./doc",
      "header": "./doc/header.md",
      "footer": "./doc/footer.md",
      "dest": "./README.md"
    }
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "grimoirejs-cauldron": "^2.1.3",
    "raw-loader": "^0.5.1",
    "ts-loader": "^1.3.3",
    "typescript": "^2.1.5",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2",
    "webpack-shell-plugin": "^0.5.0",
    "yargs": "^6.5.0"
  },
  "dependencies": {
    "grimoirejs": "^0.13.0",
    "grimoirejs-fundamental": "beta",
    "grimoirejs-math": "^1.8.1"
  }
}
